@{
}

@model List<Application>

<link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">

<table class= "table table-striped table-hover table-bordered">

    <thead class="thead-dark">
        <tr>
            
            <td>CategoryId</td>
            <td>Title</td>
            <td>Year</td>
            <td>Director</td>
            <td>Rating</td>
            <td>Edited</td>
            <td>Lent to</td>
            <td>CopiedToPlex</td>
            <td>Notes</td>
        </tr>
    </thead>

    <tbody>
    @foreach(var item in Model)
    {
        <tr>
            
            <td>@item.CategoryId</td>
            <td>@item.Title</td>
            <td>@item.Year</td>
            <td>@item.Director</td>
            <td>@item.Rating</td>
            <td>@item.Edited</td>
            <td>@item.LentTo</td>
            <td>@item.CopiedToPlex</td>
            <td>@item.Notes</td>

                <td>
                    <a style="display: inline-block; padding: 6px 12px; background-color: #007bff; color: white; text-decoration: none; border-radius: 4px;"
                       asp-controller="Home"
                       asp-action="Edit"
                       asp-route-id="@item.MovieId">Edit</a>
                </td>
                <td>
                    <a style="display: inline-block; padding: 6px 12px; background-color: #dc3545; color: white; text-decoration: none; border-radius: 4px;"
                       asp-controller="Home"
                       asp-action="Delete"
                       asp-route-id="@item.MovieId">Delete</a>
                </td>

        </tr>
    }
    </tbody>
</table>