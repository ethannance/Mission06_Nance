@{
}

@model List<Application>

<table class= "table table-striped table-bordered">

    <thead class="thead-dark">
        <tr>
            
            <td>Category</td>
            <td>Title</td>
            <td>Year</td>
            <td>Director</td>
            <td>Rating</td>
            <td>Edited</td>
            <td>Lent to</td>
            <td>CopiedToPlex</td>
            <td>Notes</td>
            <td>Edit</td>
            <td>Delete</td>
        </tr>
    </thead>

    <tbody>
    @foreach(var item in Model)
    {
        
        <tr>

            <td>@item.Category?.Category</td>
            <td>@item.Title</td>
            <td>@item.Year</td>
            <td>@item.Director</td>
            <td>@item.Rating</td>
            <td>@item.Edited</td>
            <td>@item.LentTo</td>
            <td>@item.CopiedToPlex</td>
            <td>@item.Notes</td>

                <td>
                    <a class="btn btn-info"
                       asp-controller="Home"
                       asp-action="Edit"
                       asp-route-id="@item.MovieId">Edit</a>
                </td>
                <td>
                    <a class="btn btn-danger"
                       asp-controller="Home"
                       asp-action="Delete"
                       asp-route-id="@item.MovieId">Delete</a>
                </td>

        </tr>
  
    }
    </tbody>
</table>
