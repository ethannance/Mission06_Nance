@{

}

@model Application


<head>
    <title>@ViewData["Title"] Add Movie</title>
    <link rel="stylesheet" href="~/css/form.css" asp-append-version="true" />
    <style>
        body {
            margin-bottom: 80px;
        }
    </style>
</head>

<!--create html form-->
<h1>Add a Movie</h1>

<form method="post">

    <input type="hidden" asp-for="MovieId"/>
  
    <label asp-for="Title">Movie Title</label>
    <input asp-for="Title" />

    <br />
    
    <select asp-for="CategoryId">
        <option value="">Select A Category</option>
        @foreach (CategoryCategory n in ViewBag.Categories)
        {
            <option value="@n.CategoryId">@n.Category</option>
        }
    </select>

    <br />

    <label asp-for="Year">Year Released: </label>
    <input asp-for="Year" type="number" />

    <br />
    <label asp-for="Director">Primary Director: </label>
    <input asp-for="Director"/>

    <br />

    <label asp-for="Rating">Rating</label>
    <select asp-for="Rating" >
        <option value="">Select a rating</option>
        <option value="G">G</option>
        <option value="PG">PG</option>
        <option value="PG-13">PG-13</option>
        <option value="R">R</option>
    </select>

    <br />

    <label asp-for="Edited">Is this movie edited?</label>
    <select asp-for="Edited">
        <option value="true">Yes</option>
        <option value="false">No</option>
    </select>

    <br />
    <label asp-for="LentTo">Who (if any) is this movie currently lent to?</label>
    <input asp-for="LentTo" />

    <br />

    <label asp-for="CopiedToPlex">Is this movie copied to Plex?</label>
    <select asp-for="CopiedToPlex">
        <option value="true">Yes</option>
        <option value="false">No</option>
    </select>

    <br />

    <label asp-for="Notes">Notes</label>
    <input asp-for="Notes" maxlength="25"/>

    <button type = "submit">Submit Application</button>

    <div asp-validation-summary="All"></div>

</form>